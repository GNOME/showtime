using Gtk 4.0;

ShortcutsWindow help_overlay {
  modal: true;

  ShortcutsSection {
    section-name: "shortcuts";
    max-height: 10;

    ShortcutsGroup {
      title: _("General");

      ShortcutsShortcut {
        title: _("New Window");
        action-name: "app.new-window";
      }

      ShortcutsShortcut {
        title: _("Open Video");
        action-name: "app.open-video";
      }

      ShortcutsShortcut {
        title: _("Toggle Fullscreen");
        action-name: "app.fullscreen";
      }

      ShortcutsShortcut {
        title: _("Show Shortcuts");
        action-name: "win.show-help-overlay";
      }

      ShortcutsShortcut {
        title: _("Close Window");
        action-name: "app.close-window";
      }

      ShortcutsShortcut {
        title: _("Quit");
        action-name: "app.quit";
      }
    }
  }
}
